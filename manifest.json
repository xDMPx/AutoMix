{
    "manifest_version": 3,
    "name": "AutoMix",
    "description": "Hands-Free Music Binge",
    "version": "0.2.0",
    "icons": {
        "16": "icon_16.png",   
        "32": "icon_32.png",   
        "48": "icon_48.png",   
        "64": "icon_64.png",   
        "128": "icon_128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "options_ui": {
        "page": "options.html"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "commands": {
        "playNext": {
            "suggested_key": {
                "default": "Ctrl+Right"
            },
            "description": "Play next video"
        },
        "toggleTheatreMode": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            },
            "description": "Toggle theatre mode enforcement"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{632a7b71-85ce-4841-983f-3aab02d58839}"
        }
    }
}
